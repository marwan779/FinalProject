@using InventoryManagementSystem.Models.Entities
@using InventoryManagementSystem.Utility
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagementSystem</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" />



    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagementSystem.styles.css" asp-append-version="true" />
    <!-- Chart.js for Dashboard -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-navbar border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-box"></i> Inventory System
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light nav-link-custom" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i> Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light nav-link-custom" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fas fa-shield-alt"></i> Privacy
                                </a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                var user = await UserManager.GetUserAsync(User);
                                if (user != null && await UserManager.IsInRoleAsync(user, "Owner"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-controller="Home" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt"></i> Dashboard
                                        </a>
                                    </li>
                                }
                            }


                            @* Owner Options Dropdown *@
                            @if (User.IsInRole(StaticDetails.OwnerRole))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light nav-link-custom" href="#" id="ownerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Owner Options
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="ownerDropdown">
                                        <li>
                                            <a class="dropdown-item nav-link-custom" asp-area="Owner" asp-controller="Products" asp-action="Index">Products</a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item nav-link-custom" asp-area="Owner" asp-controller="OwnerPurchaseOrders" asp-action="Index">Purchase Orders</a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item nav-link-custom" asp-area="Owner" asp-controller="InventoryTransactions" asp-action="Index">Inventory Transactions</a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item nav-link-custom" asp-area="Owner" asp-controller="Owner" asp-action="Index">Supplier Management</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item nav-link-custom" asp-area="Owner" asp-controller="Category" asp-action="Index">Categories Management</a>
                                        </li>

                                        <li><hr class="dropdown-divider"></li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole(StaticDetails.SupplierRole))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light nav-link-custom" href="#" id="ownerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Supplier Options
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="ownerDropdown">
                                        <li>
                                            <a class="dropdown-item nav-link-custom" asp-area="Supplier" asp-controller="SupplierPurchaseOrders" asp-action="Index">Purchase Orders</a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    </ul>
                                </li>
                            }
                        </ul>

                        <!-- Right Side - Always Show Cart -->
                        <partial name="_LoginPartial" />

                        <!-- Cart Icon - Show for everyone -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-light cart-link position-relative" asp-controller="Cart" asp-action="Index" title="Shopping Cart">
                                    <i class="fas fa-shopping-cart fa-lg"></i>
                                    <span class="cart-badge" id="navbar-cart-count" style="display: none;">0</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container-fluid px-0 flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted bg-dark mt-auto py-3" style="position: relative; bottom: 0; width: 100%;">
            <div class="container text-center">
                <span class="text-light">&copy; 2024 - InventoryManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a></span>
            </div>
        </footer>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Load cart count on page load
        $(document).ready(function () {
            loadCartCount();
        });

        function loadCartCount() {
            $.ajax({
                url: '/Cart/GetCartCount',
                type: 'GET',
                success: function (response) {
                    updateCartBadge(response.count);
                },
                error: function() {
                    // If error, hide badge
                    $('#navbar-cart-count').hide();
                }
            });
        }

        function updateCartBadge(count) {
            const badge = $('#navbar-cart-count');
            badge.text(count);

            if (count > 0) {
                badge.show();
                badge.addClass('show');
            } else {
                badge.hide();
                badge.removeClass('show');
            }
        }

        // Global function for other pages
        window.updateNavbarCart = function(count) {
            updateCartBadge(count);
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>