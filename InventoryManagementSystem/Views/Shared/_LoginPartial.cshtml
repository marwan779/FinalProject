@using InventoryManagementSystem.Utility
@using Microsoft.AspNetCore.Identity

@if (User.Identity?.IsAuthenticated ?? false)
{
    <ul class="navbar-nav">
        <!-- Order History Link -->
        <li class="nav-item">

            @if (User.IsInRole(StaticDetails.CustomerRole))
            {
                <a class="nav-link text-light nav-link-custom" asp-controller="Order" asp-action="History">
                    <i class="fas fa-history"></i> My Orders
                </a>
            }
            
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-light nav-link-custom" href="#" id="userDropdown"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle"></i> Account
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="fas fa-user-cog"></i> Profile
                    </a>
                </li>
                <li>

                    
                     @*    <a class="dropdown-item" asp-controller="Order" asp-action="History">
                            <i class="fas fa-shopping-bag"></i> My Orders
                        </a>
 *@
                    
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                        <button type="submit" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-light nav-link-custom" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light nav-link-custom" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
    </ul>
}