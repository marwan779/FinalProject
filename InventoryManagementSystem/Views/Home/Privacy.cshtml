@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="create-product-page">
    <div class="page-header">
        <h1>Privacy Policy</h1>
        <p class="page-subtitle">Your privacy is important to us</p>
    </div>

    <div class="form-container">
        <div class="form-section">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary-custom text-white rounded-circle p-3 me-3">
                    <i class="fas fa-shield-alt fa-lg"></i>
                </div>
                <div>
                    <h3 class="section-title mb-1">Our Commitment to Privacy</h3>
                    <p class="text-muted mb-0">How we protect and manage your data</p>
                </div>
            </div>

            <!-- Introduction -->
            <div class="mb-5">
                <h4 class="text-primary-custom mb-3">
                    <i class="fas fa-info-circle me-2"></i>Introduction
                </h4>
                <p class="text-muted">
                    At Inventory Management System, we are committed to protecting your privacy and ensuring the security
                    of your personal information. This Privacy Policy explains how we collect, use, and safeguard your data.
                </p>
            </div>

            <!-- Information We Collect -->
            <div class="mb-5">
                <h4 class="text-primary-custom mb-3">
                    <i class="fas fa-database me-2"></i>Information We Collect
                </h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card border-0 bg-light mb-3">
                            <div class="card-body">
                                <h5 class="card-title text-primary-custom">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                                <ul class="list-unstyled text-muted">
                                    <li><i class="fas fa-check text-success me-2"></i>Name and contact details</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Email address</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Phone number</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Business address</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-0 bg-light mb-3">
                            <div class="card-body">
                                <h5 class="card-title text-primary-custom">
                                    <i class="fas fa-chart-bar me-2"></i>Usage Data
                                </h5>
                                <ul class="list-unstyled text-muted">
                                    <li><i class="fas fa-check text-success me-2"></i>Login activity</li>
                                    <li><i class="fas fa-check text-success me-2"></i>System interactions</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Order history</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Preferences</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- How We Use Your Information -->
            <div class="mb-5">
                <h4 class="text-primary-custom mb-3">
                    <i class="fas fa-cogs me-2"></i>How We Use Your Information
                </h4>
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <div class="bg-primary-custom text-white rounded-circle p-3 mx-auto mb-2" style="width: 80px; height: 80px;">
                            <i class="fas fa-shipping-fast fa-2x"></i>
                        </div>
                        <h6 class="text-primary-custom">Order Processing</h6>
                        <p class="text-muted small">Manage your purchases and deliveries</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="bg-primary-custom text-white rounded-circle p-3 mx-auto mb-2" style="width: 80px; height: 80px;">
                            <i class="fas fa-headset fa-2x"></i>
                        </div>
                        <h6 class="text-primary-custom">Customer Support</h6>
                        <p class="text-muted small">Provide assistance and resolve issues</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="bg-primary-custom text-white rounded-circle p-3 mx-auto mb-2" style="width: 80px; height: 80px;">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <h6 class="text-primary-custom">Analytics</h6>
                        <p class="text-muted small">Improve our services and features</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="bg-primary-custom text-white rounded-circle p-3 mx-auto mb-2" style="width: 80px; height: 80px;">
                            <i class="fas fa-bell fa-2x"></i>
                        </div>
                        <h6 class="text-primary-custom">Notifications</h6>
                        <p class="text-muted small">Keep you updated on important changes</p>
                    </div>
                </div>
            </div>

            <!-- Data Protection -->
            <div class="mb-5">
                <h4 class="text-primary-custom mb-3">
                    <i class="fas fa-lock me-2"></i>Data Protection & Security
                </h4>
                <div class="alert alert-success border-0">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-success">
                                <i class="fas fa-shield-check me-2"></i>Security Measures
                            </h5>
                            <ul class="text-muted">
                                <li>Encrypted data transmission</li>
                                <li>Secure server infrastructure</li>
                                <li>Regular security audits</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-success">
                                <i class="fas fa-user-shield me-2"></i>Your Rights
                            </h5>
                            <ul class="text-muted">
                                <li>Access your personal data</li>
                                <li>Request data correction</li>
                                <li>Delete your account</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="text-center mt-5 p-4 bg-light rounded-3">
                <h4 class="text-primary-custom mb-3">
                    <i class="fas fa-question-circle me-2"></i>Questions?
                </h4>
                <p class="text-muted mb-3">
                    If you have any questions about our Privacy Policy, please contact us:
                </p>
                <div class="d-flex justify-content-center gap-4">
                    <a href="mailto:privacy@inventorysystem.com" class="text-primary-custom text-decoration-none">
                        <i class="fas fa-envelope me-2"></i>privacy@inventorysystem.com
                    </a>
                    <span class="text-muted">|</span>
                    <a href="/Home/Contact" class="text-primary-custom text-decoration-none">
                        <i class="fas fa-phone me-2"></i>Contact Support
                    </a>
                </div>
            </div>

            <!-- Last Updated -->
            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="fas fa-clock me-2"></i>
                    Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")
                </p>
            </div>
        </div>
    </div>
</div>