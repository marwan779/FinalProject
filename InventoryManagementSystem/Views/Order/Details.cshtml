@model InventoryManagementSystem.Models.Entities.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="products-page">
    <div class="page-header">
        <h1><i class="fas fa-file-invoice"></i> Order Details</h1>
        <p class="page-subtitle">Order #@Model.OrderId</p>
    </div>

    <div class="confirmation-container">
        <!-- Order Details -->
        <div class="confirmation-left">
            <!-- Order Items -->
            <div class="confirmation-section">
                <h3 class="section-title">
                    <i class="fas fa-boxes"></i> Order Items
                </h3>

                <div class="order-items-list">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="order-item">
                            <div class="item-image">
                                @if (!string.IsNullOrEmpty(item.ProductImagePath))
                                {
                                    <img src="@item.ProductImagePath" alt="@item.ProductName" />
                                }
                                else
                                {
                                    <div class="no-img">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </div>
                            <div class="item-details">
                                <h4 class="product-name">@item.ProductName</h4>
                                <div class="item-meta">
                                    <span class="quantity">Quantity: @item.Quantity</span>
                                    <span class="unit-price">Unit Price: EGP @item.UnitPrice.ToString("N2")</span>
                                </div>
                            </div>
                            <div class="item-total">EGP @item.TotalPrice.ToString("N2")</div>
                        </div>
                    }
                </div>

                <div class="order-total-box">
                    <div class="total-row">
                        <span>Total Amount:</span>
                        <span class="total-amount">EGP @Model.OrderTotal.ToString("N2")</span>
                    </div>
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="confirmation-section">
                <h3 class="section-title">
                    <i class="fas fa-truck"></i> Shipping Information
                </h3>

                <div class="info-grid">
                    <div class="info-item">
                        <label><i class="fas fa-user"></i> Full Name:</label>
                        <span>@Model.ShippingFullName</span>
                    </div>
                    <div class="info-item">
                        <label><i class="fas fa-map-marker-alt"></i> Address:</label>
                        <span>@Model.ShippingAddress</span>
                    </div>
                    <div class="info-item">
                        <label><i class="fas fa-phone"></i> Phone:</label>
                        <span>@Model.ShippingPhone</span>
                    </div>
                    <div class="info-item">
                        <label><i class="fas fa-envelope"></i> Email:</label>
                        <span>@Model.ShippingEmail</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="confirmation-right">
            <!-- Order Status -->
            <div class="info-box">
                <h3 class="section-title">
                    <i class="fas fa-info-circle"></i> Order Information
                </h3>
                <div class="info-content">
                    <div class="info-row">
                        <span class="info-label">Order Number:</span>
                        <span class="info-value">#@Model.OrderId</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Order Date:</span>
                        <span class="info-value">@Model.OrderDate.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status:</span>
                        <span class="status-badge @Model.OrderStatus.ToLower().Replace(" ", "-")">@Model.OrderStatus</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Payment Method:</span>
                        <span class="info-value payment-method">@Model.PaymentMethod</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Payment Status:</span>
                        <span class="status-badge @Model.PaymentStatus.ToLower().Replace(" ", "-")">@Model.PaymentStatus</span>
                    </div>
                    @if (Model.PaymentDate.HasValue)
                    {
                        <div class="info-row">
                            <span class="info-label">Payment Date:</span>
                            <span class="info-value">@Model.PaymentDate.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                        </div>
                    }
                </div>
            </div>

          

            <!-- Actions -->
            <div class="confirmation-actions">
                <a asp-action="History" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back to History
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-continue-shopping">
                    <i class="fas fa-shopping-bag"></i> Continue Shopping
                </a>

                @if (Model.OrderStatus == "Pending" && Model.PaymentStatus != "Paid")
                {
                    <form asp-action="Cancel" asp-route-id="@Model.OrderId" method="post" class="cancel-form">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-cancel-order" id="cancelOrderBtn">
                            <i class="fas fa-times"></i> Cancel Order
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* ==================== ORDER DETAILS STYLES ==================== */
    .confirmation-container {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 30px;
        align-items: start;
    }

    /* Left Side - Order Details */
    .confirmation-left {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .confirmation-section {
        background: var(--bg-overlay-dark);
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 15px var(--shadow-light);
    }

    .section-title {
        color: var(--primary-color);
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--primary-color);
    }

    /* Order Items List */
    .order-items-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 25px;
    }

    .order-item {
        display: flex;
        align-items: center;
        gap: 20px;
        padding: 20px;
        background: var(--white);
        border-radius: 8px;
        box-shadow: 0 2px 8px var(--shadow-medium);
        transition: all 0.3s ease;
    }

        .order-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-light);
        }

    .item-image {
        flex-shrink: 0;
    }

        .item-image img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid var(--border-gray);
        }

    .no-img {
        width: 70px;
        height: 70px;
        background: var(--bg-light);
        border: 2px dashed var(--border-gray);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-secondary);
        font-size: 1.5rem;
    }

    .item-details {
        flex: 1;
        min-width: 0;
    }

    .product-name {
        color: var(--text-dark);
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 10px 0;
        line-height: 1.3;
    }

    .item-meta {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .quantity,
    .unit-price {
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .item-total {
        color: var(--primary-color);
        font-size: 1.2rem;
        font-weight: 700;
        flex-shrink: 0;
        min-width: 100px;
        text-align: right;
    }

    /* Order Total Box */
    .order-total-box {
        background: var(--primary-color);
        color: var(--white);
        padding: 25px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .total-amount {
        font-size: 1.8rem;
        font-weight: 700;
    }

    /* Shipping Information */
    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: var(--white);
        border-radius: 8px;
        box-shadow: 0 2px 6px var(--shadow-medium);
    }

        .info-item label {
            color: var(--text-primary);
            font-weight: 600;
            min-width: 120px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .info-item label i {
                color: var(--primary-color);
                width: 16px;
            }

        .info-item span {
            color: var(--text-dark);
            font-weight: 500;
            flex: 1;
        }

    /* Right Side - Order Summary */
    .confirmation-right {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .info-box {
        background: var(--bg-overlay-dark);
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 15px var(--shadow-light);
    }

    .info-content {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid var(--border-gray);
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        color: var(--text-dark);
        font-weight: 500;
    }

    .info-value {
        color: var(--text-dark);
        font-weight: 600;
    }

    .payment-method {
        color: var(--primary-color);
        font-weight: 700;
    }

    /* Status Badges */
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .pending,
    .processing {
        background: var(--warning-color);
        color: var(--white);
    }

    .confirmed,
    .completed,
    .paid,
    .delivered {
        background: var(--success-color);
        color: var(--white);
    }

    .shipped {
        background: var(--secondary-color);
        color: var(--white);
    }

    .cancelled,
    .failed,
    .refunded {
        background: var(--danger-color);
        color: var(--white);
    }

    /* Delivery Estimate */
    .delivery-estimate {
        background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
        color: var(--white);
        padding: 25px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 20px;
        box-shadow: 0 4px 15px var(--shadow-light);
    }

    .estimate-icon {
        font-size: 2.5rem;
        opacity: 0.9;
    }

    .estimate-content h4 {
        margin: 0 0 8px 0;
        font-size: 1.2rem;
        font-weight: 600;
    }

    .estimate-content p {
        margin: 0 0 5px 0;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .estimate-content small {
        opacity: 0.9;
        font-size: 0.85rem;
    }

    /* Confirmation Actions */
    .confirmation-actions {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn-back {
        background: var(--light-gray);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 12px 20px;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.3s ease;
        text-align: center;
    }

        .btn-back:hover {
            background: var(--medium-gray);
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-medium);
        }

    .btn-continue-shopping {
        background: var(--primary-color);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 12px 20px;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.3s ease;
        text-align: center;
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }

        .btn-continue-shopping:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
            color: var(--white);
        }

    .cancel-form {
        margin: 0;
    }

    .btn-cancel-order {
        background: var(--danger-color);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 12px 20px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.3s ease;
        cursor: pointer;
        width: 100%;
        box-shadow: 0 4px 12px rgba(244, 67, 54, 0.3);
    }

        .btn-cancel-order:hover {
            background: var(--danger-hover);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(244, 67, 54, 0.4);
        }

    /* ==================== RESPONSIVE DESIGN ==================== */
    @@media (max-width: 1024px) {
        .confirmation-container {
            grid-template-columns: 1fr;
            gap: 25px;
        }

        .confirmation-right {
            order: -1;
        }
    }

    @@media (max-width: 768px) {
        .confirmation-section {
            padding: 25px 20px;
        }

        .order-item {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .item-meta {
            justify-content: center;
        }

        .item-total {
            text-align: center;
        }

        .info-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 8px;
        }

        .delivery-estimate {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .confirmation-actions {
            gap: 10px;
        }
    }

    @@media (max-width: 480px) {
        .confirmation-section {
            padding: 20px 15px;
        }

        .section-title {
            font-size: 1.1rem;
        }

        .total-amount {
            font-size: 1.5rem;
        }

        .info-box {
            padding: 20px 15px;
        }

        .delivery-estimate {
            padding: 20px 15px;
        }

        .confirmation-actions .btn {
            padding: 10px 15px;
            font-size: 0.9rem;
        }
    }

    /* Animation for page load */
    .confirmation-section {
        animation: fadeInUp 0.6s ease;
    }

    .info-box {
        animation: fadeInUp 0.6s ease 0.1s both;
    }

    .delivery-estimate {
        animation: fadeInUp 0.6s ease 0.2s both;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Cancel order confirmation
        document.getElementById('cancelOrderBtn')?.addEventListener('click', function(e) {
            e.preventDefault();
            const form = this.closest('form');

            Swal.fire({
                title: 'Are you sure?',
                text: "You want to cancel this order? This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel it!',
                cancelButtonText: 'Keep Order',
                reverseButtons: true,
                background: 'var(--bg-overlay-dark)',
                color: 'var(--text-dark)'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading state
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Cancelling...';
                    this.disabled = true;

                    // Submit the form
                    form.submit();
                }
            });
        });
    </script>
}