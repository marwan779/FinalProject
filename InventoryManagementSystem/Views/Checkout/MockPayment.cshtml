@{
    ViewData["Title"] = "Mock Payment - Instapay";
}

<div class="products-page">
    <div class="page-header">
        <h1><i class="fas fa-credit-card"></i> Mock Payment Gateway</h1>
        <p class="page-subtitle">This is a simulation of Instapay payment</p>
    </div>

    <div class="form-container">
        <div class="text-center">
            <div class="success-icon">
                <i class="fas fa-credit-card"></i>
            </div>

            <h2 class="payment-title">Instapay Payment Simulation</h2>
            <p class="payment-description">This is a mock payment page for development purposes.</p>

            <div class="payment-details">
                <h4>Payment Details</h4>
                <p><strong>Order ID:</strong> @ViewBag.OrderId</p>
                <p><strong>Payment Intent ID:</strong> @ViewBag.PaymentIntentId</p>
                <p><strong>Status:</strong> <span class="status-badge pending">Pending</span></p>
            </div>

            <form method="post" asp-action="ProcessMockPayment">
                <input type="hidden" name="orderId" value="@ViewBag.OrderId" />
                <input type="hidden" name="paymentIntentId" value="@ViewBag.PaymentIntentId" />

                <div class="form-actions">
                    <button type="submit" name="success" value="true" class="btn btn-success-payment">
                        <i class="fas fa-check-circle"></i> Simulate Successful Payment
                    </button>
                    <button type="submit" name="success" value="false" class="btn btn-failed-payment">
                        <i class="fas fa-times-circle"></i> Simulate Failed Payment
                    </button>
                </div>
            </form>

            <div class="payment-info">
                <i class="fas fa-info-circle"></i>
                In production, this would redirect to the real Instapay payment page.
            </div>
        </div>
    </div>
</div>

<style>
    /* ==================== MOCK PAYMENT STYLES ==================== */
    .text-center {
        text-align: center;
    }

    .success-icon {
        font-size: 4rem;
        color: var(--primary-color);
        margin-bottom: 20px;
        animation: pulse 2s infinite;
    }

    .payment-title {
        color: var(--text-primary);
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .payment-description {
        color: var(--text-primary);
        opacity: 0.9;
        font-size: 1.1rem;
        margin-bottom: 30px;
    }

    .payment-details {
        background: var(--bg-overlay-dark);
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 30px;
        border: 2px solid var(--primary-color);
        box-shadow: 0 4px 15px var(--shadow-light);
    }

        .payment-details h4 {
            color: var(--primary-color);
            margin-bottom: 20px;
            font-size: 1.3rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .payment-details p {
            color: var(--text-primary);
            margin-bottom: 10px;
            font-size: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .payment-details p:last-child {
                border-bottom: none;
                margin-bottom: 0;
            }

            .payment-details p strong {
                color: var(--text-primary);
                font-weight: 600;
                min-width: 150px;
                text-align: left;
            }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .pending {
        background: var(--warning-color);
        color: var(--white);
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin: 30px 0;
        flex-wrap: wrap;
    }

    .btn-success-payment {
        background: var(--success-color);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 15px 30px;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }

        .btn-success-payment:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
        }

    .btn-failed-payment {
        background: var(--danger-color);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 15px 30px;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(244, 67, 54, 0.3);
    }

        .btn-failed-payment:hover {
            background: var(--danger-hover);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(244, 67, 54, 0.4);
        }

    /* Payment Info */
    .payment-info {
        color: var(--text-primary);
        opacity: 0.8;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-top: 20px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        border-left: 4px solid var(--primary-color);
    }

    /* Animation */
    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    /* ==================== RESPONSIVE DESIGN ==================== */
    @@media (max-width: 768px) {
        .form-actions {
            flex-direction: column;
            align-items: center;
        }

        .btn-success-payment,
        .btn-failed-payment {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }

        .payment-details p {
            flex-direction: column;
            align-items: flex-start;
            gap: 5px;
        }

            .payment-details p strong {
                min-width: auto;
            }

        .success-icon {
            font-size: 3rem;
        }

        .payment-title {
            font-size: 1.5rem;
        }
    }

    @@media (max-width: 480px) {
        .form-container {
            padding: 20px;
        }

        .payment-details {
            padding: 20px 15px;
        }

        .btn-success-payment,
        .btn-failed-payment {
            padding: 12px 20px;
            font-size: 1rem;
        }

        .payment-info {
            font-size: 0.85rem;
            padding: 12px;
        }
    }
</style>