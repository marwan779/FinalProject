@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="create-product-page">
    <div class="page-header">
        <h1>Reset Your Password</h1>
        <p class="page-subtitle">Enter your email to receive a password reset link</p>
    </div>

    <div class="form-container">
        <div class="form-grid">
            <!-- Password Reset Form -->
            <div class="form-section">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary-custom text-white rounded-circle p-3 me-3">
                        <i class="fas fa-key fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="section-title mb-1">Password Recovery</h3>
                        <p class="text-muted mb-0">We'll send you a link to reset your password</p>
                    </div>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="fas fa-envelope me-2 text-primary-custom"></i>Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control"
                               autocomplete="username" aria-required="true"
                               placeholder="Enter your email address" />
                        <span asp-validation-for="Input.Email" class="validation-message"></span>
                    </div>

                    <div class="form-actions text-center">
                        <button type="submit" class="stock-badge in-stock border-0 px-4 py-2">
                            <i class="fas fa-paper-plane me-2"></i> Send Reset Link
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Remember your password?
                            <a asp-page="./Login" class="text-primary-custom text-decoration-none">
                                <i class="fas fa-sign-in-alt me-1"></i>Back to Login
                            </a>
                        </p>
                    </div>
                </form>
            </div>

            <!-- Additional Info Section -->
            <div class="form-section">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-secondary-custom text-white rounded-circle p-3 me-3">
                        <i class="fas fa-shield-alt fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="section-title mb-1">Security Information</h3>
                        <p class="text-muted mb-0">How password reset works</p>
                    </div>
                </div>

                <div class="alert alert-info border-0">
                    <h5 class="alert-heading">
                        <i class="fas fa-info-circle me-2"></i>What to Expect
                    </h5>
                    <p class="mb-2">After submitting your email:</p>
                    <hr>
                    <div class="mb-2">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        <strong>Check your inbox:</strong> We'll send you a password reset link
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-clock text-primary me-2"></i>
                        <strong>Quick delivery:</strong> The link typically arrives within minutes
                    </div>
                    <div class="mb-0">
                        <i class="fas fa-link text-primary me-2"></i>
                        <strong>Secure process:</strong> The link expires for your security
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}