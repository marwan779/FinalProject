@page
@using InventoryManagementSystem.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="create-product-page">
    <div class="page-header">
        <h1>Create Account</h1>
        <p class="page-subtitle">Join our inventory management system</p>
    </div>

    <div class="form-container">
        <div class="form-grid">
            <!-- Registration Form -->
            <div class="form-section">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary-custom text-white rounded-circle p-3 me-3">
                        <i class="fas fa-user-plus fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="section-title mb-1">Account Registration</h3>
                        <p class="text-muted mb-0">Create your account to get started</p>
                    </div>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Input.FullName" class="form-label">
                                <i class="fas fa-user me-2 text-primary-custom"></i>Full Name
                            </label>
                            <input asp-for="Input.FullName" class="form-control"
                                   autocomplete="fullname" aria-required="true"
                                   placeholder="Enter your full name" />
                            <span asp-validation-for="Input.FullName" class="validation-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.UserName" class="form-label">
                                <i class="fas fa-at me-2 text-primary-custom"></i>Username
                            </label>
                            <input asp-for="Input.UserName" class="form-control"
                                   autocomplete="username" aria-required="true"
                                   placeholder="Choose a username" />
                            <span asp-validation-for="Input.UserName" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Address" class="form-label">
                            <i class="fas fa-map-marker-alt me-2 text-primary-custom"></i>Address
                        </label>
                        <input asp-for="Input.Address" class="form-control"
                               autocomplete="address" aria-required="true"
                               placeholder="Enter your address" />
                        <span asp-validation-for="Input.Address" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="fas fa-envelope me-2 text-primary-custom"></i>Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control"
                               autocomplete="email" aria-required="true"
                               placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="form-label">
                            <i class="fas fa-phone me-2 text-primary-custom"></i>Phone Number
                        </label>
                        <input asp-for="Input.PhoneNumber" class="form-control"
                               autocomplete="phonenumber" aria-required="true"
                               placeholder="Enter your phone number" />
                        <span asp-validation-for="Input.PhoneNumber" class="validation-message"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-2 text-primary-custom"></i>Password
                            </label>
                            <input asp-for="Input.Password" class="form-control"
                                   autocomplete="new-password" aria-required="true"
                                   placeholder="Create a password" />
                            <span asp-validation-for="Input.Password" class="validation-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-2 text-primary-custom"></i>Confirm Password
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control"
                                   autocomplete="new-password" aria-required="true"
                                   placeholder="Confirm your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user-tag me-2 text-primary-custom"></i>Account Type
                        </label>
                        <select asp-for="Input.Role" class="form-control" data-val="false">
                            <option value="@StaticDetails.CustomerRole">Customer</option>
                            <option value="@StaticDetails.SupplierRole">Supplier</option>
                        </select>
                    </div>

                    <div class="form-actions text-center">
                        <button id="registerSubmit" type="submit" class="stock-badge in-stock border-0 px-4 py-2">
                            <i class="fas fa-user-plus me-2"></i> Create Account
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Already have an account?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary-custom text-decoration-none">
                                <i class="fas fa-sign-in-alt me-1"></i>Sign In
                            </a>
                        </p>
                    </div>
                </form>
            </div>

            <!-- Additional Info Section -->
            <div class="form-section">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-secondary-custom text-white rounded-circle p-3 me-3">
                        <i class="fas fa-info-circle fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="section-title mb-1">Account Types</h3>
                        <p class="text-muted mb-0">Choose the right account for your needs</p>
                    </div>
                </div>

                <div class="alert alert-info border-0">
                    <h5 class="alert-heading">
                        <i class="fas fa-users me-2"></i>Available Roles
                    </h5>
                    <p class="mb-2">Select the account type that best fits your requirements:</p>
                    <hr>
                    <div class="mb-2">
                        <strong>Customer:</strong> Browse and purchase products from suppliers.
                    </div>
                    <div class="mb-0">
                        <strong>Supplier:</strong> Manage products and receive purchase orders.
                    </div>
                </div>

                @* <div class="mt-4">
                    <h5 class="text-muted mb-3">Benefits:</h5>
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check text-success me-2"></i>
                            <span>Secure account management</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check text-success me-2"></i>
                            <span>Easy order tracking</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check text-success me-2"></i>
                            <span>24/7 system access</span>
                        </div>
                    </div>
                </div> *@

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="mt-4">
                        <hr>
                        <h5 class="text-muted mb-3">External Registration</h5>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name"
                                            title="Register using your @provider.DisplayName account">
                                        <i class="fab fa-@provider.Name.ToLower() me-2"></i>Sign up with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="mt-4 text-center">
                        <hr>
                        <p class="text-muted">
                            <i class="fas fa-cog me-2"></i>
                            External registration services can be configured by the system administrator.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}