@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="create-product-page">
    <div class="page-header">
        <h1>Change Password</h1>
        <p class="page-subtitle">Update your security credentials</p>
    </div>

    <div class="form-container">
        <div class="form-section">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary-custom text-white rounded-circle p-3 me-3">
                    <i class="fas fa-key fa-lg"></i>
                </div>
                <div>
                    <h3 class="section-title mb-1">Password Management</h3>
                    <p class="text-muted mb-0">Secure your account with a new password</p>
                </div>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.OldPassword" class="form-label">
                        <i class="fas fa-lock me-2 text-primary-custom"></i>Current Password
                    </label>
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true"
                           placeholder="Enter your current password" />
                    <span asp-validation-for="Input.OldPassword" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.NewPassword" class="form-label">
                        <i class="fas fa-lock-open me-2 text-primary-custom"></i>New Password
                    </label>
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true"
                           placeholder="Enter your new password" />
                    <span asp-validation-for="Input.NewPassword" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        <i class="fas fa-check-circle me-2 text-primary-custom"></i>Confirm New Password
                    </label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"
                           placeholder="Confirm your new password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="validation-message"></span>
                </div>

                <div class="form-actions text-center">
                    <button type="submit" class="stock-badge in-stock border-0 px-4 py-2">
                        <i class="fas fa-save me-2"></i> Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}