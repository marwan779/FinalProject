@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="create-product-page">
    <div class="page-header">
        <h1>Email Settings</h1>
        <p class="page-subtitle">Manage your email address</p>
    </div>

    <div class="form-container">
        <div class="form-section">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary-custom text-white rounded-circle p-3 me-3">
                    <i class="fas fa-envelope fa-lg"></i>
                </div>
                <div>
                    <h3 class="section-title mb-1">Email Management</h3>
                    <p class="text-muted mb-0">Update and verify your email address</p>
                </div>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="email-form" method="post">
                <div asp-validation-summary="All" class="validation-summary" role="alert"></div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-envelope me-2 text-primary-custom"></i>Current Email
                    </label>
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled />
                        @if (Model.IsEmailConfirmed)
                        {
                            <span class="input-group-text text-success">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        }
                    </div>
                    @if (!Model.IsEmailConfirmed)
                    {
                        <div class="mt-2">
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail"
                                    class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-paper-plane me-1"></i> Send verification email
                            </button>
                        </div>
                    }
                </div>

                <div class="form-group">
                    <label asp-for="Input.NewEmail" class="form-label">
                        <i class="fas fa-envelope-plus me-2 text-primary-custom"></i>New Email Address
                    </label>
                    <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true"
                           placeholder="Enter your new email address" />
                    <span asp-validation-for="Input.NewEmail" class="validation-message"></span>
                </div>

                <div class="form-actions text-center">
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail"
                            class="stock-badge in-stock border-0 px-4 py-2">
                        <i class="fas fa-sync-alt me-2"></i> Change Email
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}