@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="create-product-page">
    <div class="page-header">
        <h1>Welcome Back</h1>
        <p class="page-subtitle">Sign in to your account to continue</p>
    </div>

    <div class="form-container">
        <div class="form-grid">
            <!-- Login Form -->
            <div class="form-section">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary-custom text-white rounded-circle p-3 me-3">
                        <i class="fas fa-sign-in-alt fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="section-title mb-1">Account Login</h3>
                        <p class="text-muted mb-0">Use your credentials to access the system</p>
                    </div>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                    <!-- Custom Alert for Unregistered Users -->
                    <!-- Custom Alert for Unregistered Users -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        var errorMessage = ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage;
                        if (!string.IsNullOrEmpty(errorMessage) && errorMessage.Contains("not registered"))
                        {
                            <div class="rounded-3 mb-4 p-4" role="alert" id="unregistered-alert"
                                 style="background: rgba(76, 175, 80, 0.05); border: 1px solid var(--primary-color);">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-user-plus mt-1 me-3" style="color: var(--primary-color);"></i>
                                    <div class="flex-grow-1">
                                        <h5 style="color: var(--text-primary); margin-bottom: 8px;">Create Your Account</h5>
                                        <p style="color: var(--text-secondary); margin-bottom: 16px;">
                                            This email address isn't associated with an existing account.
                                            Start by creating a new account to access the system.
                                        </p>
                                        <div class="d-flex gap-2">
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                               class="btn btn-sm px-3"
                                               style="background: var(--primary-color); color: var(--white); border: none;">
                                                <i class="fas fa-user-plus me-1"></i> Get Started
                                            </a>
                                            <button type="button" class="btn btn-sm px-3"
                                                    onclick="this.closest('#unregistered-alert').style.display='none'"
                                                    style="background: transparent; color: var(--text-secondary); border: 1px solid var(--border-gray);">
                                                <i class="fas fa-times me-1"></i> Maybe Later
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="fas fa-envelope me-2 text-primary-custom"></i>Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control"
                               autocomplete="username" aria-required="true"
                               placeholder="Enter your email address" />
                        <span asp-validation-for="Input.Email" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label">
                            <i class="fas fa-lock me-2 text-primary-custom"></i>Password
                        </label>
                        <input asp-for="Input.Password" class="form-control"
                               autocomplete="current-password" aria-required="true"
                               placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                <i class="fas fa-remember me-1"></i> Remember me
                            </label>
                        </div>
                    </div>

                    <div class="form-actions text-center">
                        <button id="login-submit" type="submit" class="stock-badge in-stock border-0 px-4 py-2">
                            <i class="fas fa-sign-in-alt me-2"></i> Sign In
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary-custom text-decoration-none">
                                <i class="fas fa-user-plus me-1"></i> Create Account
                            </a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}