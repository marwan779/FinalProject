@model InventoryManagementSystem.Models.Entities.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="products-page">
    <div class="page-header">
        <h1><i class="fas fa-edit"></i> Edit Category</h1>
        <p class="page-subtitle">Update the category details below</p>
    </div>

    <div class="form-container">
        <form asp-action="Edit" method="post" class="category-form">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-grid">
                <!-- Category Information Section -->
                <div class="form-section">
                    <h3 class="section-title"><i class="fas fa-info-circle"></i> Category Information</h3>

                    <!-- Category ID Display -->
                    <div class="category-id-display">
                        <label class="form-label">
                            <i class="fas fa-fingerprint"></i> Category ID
                        </label>
                        <div class="id-value">@Model.CategoryId</div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag"></i> Category Name *
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="validation-message"></span>
                        <div class="form-hint">
                            <i class="fas fa-lightbulb"></i> Choose a clear, descriptive name for your category
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left"></i> Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter category description (optional)"></textarea>
                        <span asp-validation-for="Description" class="validation-message"></span>
                        <div class="form-hint">
                            <i class="fas fa-lightbulb"></i> Add a description to help identify this category's purpose
                        </div>
                    </div>

                    <!-- Creation Info -->
                    <div class="creation-info">
                        <h4><i class="fas fa-history"></i> Category History</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <label>Created:</label>
                                <span>@Model.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                            </div>
                            <div class="info-item">
                                <label>Last Updated:</label>
                                <span>Just now</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Category Preview & Actions Section -->
                <div class="form-section">
                    <h3 class="section-title"><i class="fas fa-eye"></i> Category Preview</h3>

                    <div class="preview-container">
                        <div class="preview-header">
                            <i class="fas fa-folder"></i>
                            <span>Category Preview</span>
                        </div>
                        <div class="preview-content">
                            <div class="preview-item">
                                <label>ID:</label>
                                <span class="preview-value">@Model.CategoryId</span>
                            </div>
                            <div class="preview-item">
                                <label>Name:</label>
                                <span id="previewName" class="preview-value">@Model.Name</span>
                            </div>
                            <div class="preview-item">
                                <label>Description:</label>
                                <span id="previewDescription" class="preview-value">
                                    @(string.IsNullOrEmpty(Model.Description) ? "No description provided" :
                                                                        (Model.Description.Length > 50 ? Model.Description.Substring(0, 50) + "..." : Model.Description))
                                </span>
                            </div>
                            <div class="preview-item">
                                <label>Status:</label>
                                <span class="preview-badge active">Active</span>
                            </div>
                            <div class="preview-item">
                                <label>Created:</label>
                                <span class="preview-value">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                  

            <!-- Form Actions -->
            <div class="form-actions">
                <a asp-action="Index" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Categories
                </a>
                <div class="action-buttons">
                    <button type="submit" class="btn btn-update">
                        <i class="fas fa-save"></i> Update Category
                    </button>
                  
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* ==================== EDIT CATEGORY STYLES ==================== */
    .category-form {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    .form-section {
        background: var(--white);
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 2px 8px var(--shadow-medium);
    }

    .section-title {
        color: var(--primary-color);
        margin-bottom: 20px;
        font-size: 1.3rem;
        font-weight: 600;
        border-bottom: 2px solid var(--primary-color);
        padding-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Category ID Display */
    .category-id-display {
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--border-gray);
    }

    .id-value {
        background: var(--bg-light);
        padding: 10px 15px;
        border-radius: 6px;
        font-family: monospace;
        font-weight: 600;
        color: var(--text-dark);
        border: 1px solid var(--border-gray);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid var(--border-gray);
        border-radius: 6px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: var(--white);
        color: var(--text-primary);
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    /* Form Hint */
    .form-hint {
        color: var(--text-secondary);
        font-size: 0.85rem;
        margin-top: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    /* Creation Info */
    .creation-info {
        background: rgba(33, 150, 243, 0.05);
        border-radius: 8px;
        padding: 20px;
        border-left: 4px solid var(--secondary-color);
    }

        .creation-info h4 {
            color: var(--secondary-color);
            margin-bottom: 15px;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .info-grid {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 5px 0;
    }

        .info-item label {
            color: var(--text-primary);
            font-weight: 600;
            min-width: 100px;
        }

        .info-item span {
            color: var(--text-dark);
            font-weight: 500;
        }

    /* Preview Container */
    .preview-container {
        background: var(--bg-light);
        border-radius: 8px;
        border: 2px solid var(--primary-color);
        overflow: hidden;
        margin-bottom: 25px;
    }

    .preview-header {
        background: var(--primary-color);
        color: var(--white);
        padding: 15px 20px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .preview-content {
        padding: 20px;
    }

    .preview-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid var(--border-gray);
    }

        .preview-item:last-child {
            border-bottom: none;
        }

        .preview-item label {
            color: var(--text-primary);
            font-weight: 600;
            min-width: 80px;
        }

    .preview-value {
        color: var(--text-dark);
        font-weight: 500;
        text-align: right;
        flex: 1;
    }

    .preview-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .active {
        background: var(--success-color);
        color: var(--white);
    }

    /* Edit Tips */
    .edit-tips {
        background: rgba(255, 193, 7, 0.05);
        border-radius: 8px;
        padding: 20px;
        border-left: 4px solid var(--warning-color);
        margin-bottom: 25px;
    }

        .edit-tips h4 {
            color: var(--warning-color);
            margin-bottom: 15px;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .edit-tips ul {
            margin: 0;
            padding-left: 20px;
            color: var(--text-secondary);
        }

        .edit-tips li {
            margin-bottom: 8px;
            line-height: 1.4;
        }

            .edit-tips li:last-child {
                margin-bottom: 0;
            }

    /* Danger Zone */
    .danger-zone {
        background: rgba(244, 67, 54, 0.05);
        border: 2px solid var(--danger-color);
        border-radius: 8px;
        padding: 20px;
    }

        .danger-zone h4 {
            color: var(--danger-color);
            margin-bottom: 10px;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .danger-zone p {
            color: var(--text-secondary);
            margin-bottom: 15px;
            font-size: 0.9rem;
        }

    .btn-delete-danger {
        background: var(--danger-color);
        color: var(--white);
        border: none;
        border-radius: 6px;
        padding: 10px 20px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn-delete-danger:hover {
            background: var(--danger-hover);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(244, 67, 54, 0.3);
        }

    /* Validation Styles */
    .validation-summary {
        background: rgba(244, 67, 54, 0.1);
        border: 1px solid var(--danger-color);
        border-radius: 6px;
        padding: 15px;
        margin-bottom: 20px;
        color: var(--danger-color);
        font-size: 0.9rem;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
        }

    .validation-message {
        color: var(--danger-color);
        font-size: 0.85rem;
        font-weight: 500;
        margin-top: 5px;
        display: block;
    }

    .form-control.input-validation-error {
        border-color: var(--danger-color);
    }

        .form-control.input-validation-error:focus {
            box-shadow: 0 0 0 3px rgba(244, 67, 54, 0.1);
        }

    /* Form Actions */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 20px;
        border-top: 1px solid var(--border-gray);
        gap: 15px;
    }

    .btn-back {
        background: var(--light-gray);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: var(--medium-gray);
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-medium);
        }

    .action-buttons {
        display: flex;
        gap: 12px;
    }

    .btn-update {
        background: var(--primary-color);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }

        .btn-update:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
        }

        .btn-update:disabled {
            background: var(--light-gray);
            cursor: not-allowed;
            opacity: 0.6;
            transform: none;
            box-shadow: none;
        }

    .btn-cancel {
        background: var(--light-gray);
        color: var(--white);
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: var(--medium-gray);
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-medium);
        }

    /* ==================== RESPONSIVE DESIGN ==================== */
    @@media (max-width: 1024px) {
        .form-grid {
            grid-template-columns: 1fr;
            gap: 25px;
        }
    }

    @@media (max-width: 768px) {
        .form-section {
            padding: 20px;
        }

        .form-actions {
            flex-direction: column;
            align-items: stretch;
            gap: 12px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }

        .btn-back, .btn-update, .btn-cancel {
            width: 100%;
            justify-content: center;
        }

        .preview-item, .info-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 5px;
        }

            .preview-item label, .info-item label {
                min-width: auto;
            }

        .preview-value {
            text-align: left;
        }
    }

    @@media (max-width: 480px) {
        .form-container {
            padding: 20px;
        }

        .form-section {
            padding: 15px;
        }

        .section-title {
            font-size: 1.1rem;
        }

        .form-control {
            padding: 10px 12px;
        }

        .preview-content, .creation-info, .edit-tips, .danger-zone {
            padding: 15px;
        }
    }

    /* Animation for form sections */
    .form-section {
        animation: slideInUp 0.5s ease;
    }

        .form-section:nth-child(2) {
            animation-delay: 0.1s;
        }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Real-time preview functionality
        const nameInput = document.getElementById('Name');
        const descriptionInput = document.getElementById('Description');
        const previewName = document.getElementById('previewName');
        const previewDescription = document.getElementById('previewDescription');

        function updatePreview() {
            // Update name preview
            if (nameInput.value.trim()) {
                previewName.textContent = nameInput.value;
                previewName.style.color = 'var(--text-dark)';
                previewName.style.fontWeight = '600';
            } else {
                previewName.textContent = '@Model.Name';
                previewName.style.color = 'var(--text-dark)';
                previewName.style.fontWeight = '600';
            }

            // Update description preview
            if (descriptionInput.value.trim()) {
                previewDescription.textContent = descriptionInput.value.length > 50
                    ? descriptionInput.value.substring(0, 50) + '...'
                    : descriptionInput.value;
                previewDescription.style.color = 'var(--text-dark)';
            } else {
                const originalDesc = '@Model.Description';
                previewDescription.textContent = originalDesc && originalDesc.length > 0
                    ? (originalDesc.length > 50 ? originalDesc.substring(0, 50) + '...' : originalDesc)
                    : 'No description provided';
                previewDescription.style.color = originalDesc && originalDesc.length > 0 ? 'var(--text-dark)' : 'var(--text-secondary)';
            }
        }

        // Add event listeners for real-time preview updates
        nameInput.addEventListener('input', updatePreview);
        descriptionInput.addEventListener('input', updatePreview);

        // Initialize preview on page load
        document.addEventListener('DOMContentLoaded', updatePreview);

        // Delete confirmation
        document.getElementById('deleteBtn').addEventListener('click', function(e) {
            e.preventDefault();
            const deleteUrl = this.href;
            const categoryName = '@Model.Name';

            Swal.fire({
                title: 'Are you sure?',
                html: `You are about to delete the category <strong>"${categoryName}"</strong>. This action cannot be undone!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                reverseButtons: true,
                background: 'var(--bg-overlay-dark)',
                color: 'var(--text-light)'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = deleteUrl;
                }
            });
        });

        // Form validation enhancement
        const form = document.querySelector('.category-form');
        const submitBtn = form.querySelector('.btn-update');

        form.addEventListener('submit', function (e) {
            const name = nameInput.value.trim();

            if (!name) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Validation Error',
                    text: 'Please enter a category name.',
                    confirmButtonColor: '#4CAF50'
                });
                nameInput.focus();
                return false;
            }

            if (name.length > 100) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Validation Error',
                    text: 'Category name must be 100 characters or less.',
                    confirmButtonColor: '#4CAF50'
                });
                nameInput.focus();
                return false;
            }

            if (descriptionInput.value.length > 500) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Validation Error',
                    text: 'Description must be 500 characters or less.',
                    confirmButtonColor: '#4CAF50'
                });
                descriptionInput.focus();
                return false;
            }

            // Show loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating Category...';
        });

        // Input validation styling
        function validateInput(input, isValid) {
            if (isValid) {
                input.classList.remove('input-validation-error');
                input.classList.add('input-validation-valid');
            } else {
                input.classList.remove('input-validation-valid');
                input.classList.add('input-validation-error');
            }
        }

        nameInput.addEventListener('blur', function() {
            validateInput(this, this.value.trim().length > 0 && this.value.trim().length <= 100);
        });

        descriptionInput.addEventListener('blur', function() {
            validateInput(this, this.value.length <= 500);
        });

        // Add input validation styles
        const style = document.createElement('style');
        style.textContent = `
            .input-validation-valid {
                border-color: var(--success-color) !important;
            }
        `;
        document.head.appendChild(style);
    </script>
}